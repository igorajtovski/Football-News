@model IEnumerable<euro1.Models.Statistic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>

            <img alt="@item.Picture" src="@item.Picture" />
           
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StatisticId }) |
            @Html.ActionLink("Details", "Details", new { id=item.StatisticId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StatisticId })
        </td>
    </tr>
}

</table>
