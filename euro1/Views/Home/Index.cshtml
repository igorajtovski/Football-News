@model List<euro1.Models.ImageGallery>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/_layout.cshtml";
}

<p class="timestamp" align="center">@DateTime.Now.Date.ToString("dd.MM.yyy")</p>

<table>
    @{
        int j = 0;
        for (int i = 0; i < Model.Count(); i += 1)
        {
            j = i;
            <tr>
                @* I have done this for show 4 images in  a Row *@
                @while (j < i + 1 && j < Model.Count())
                {
                    <td>
                        <img align="middle" src="data:image/png;base64,@Convert.ToBase64String(Model[j].ImageData,0,Model[j].ImageData.Length)" />
                    </td>
                    j++;
                }
            </tr>
        }
    }

</table>
@foreach (var item in Model)
{
 
    <p>@Html.DisplayFor(modelItem => item.Content)</p>

}
